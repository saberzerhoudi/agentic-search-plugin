{
    "manifest_version": 2,
    "name": "Google Search Tracker",
    "version": "1.0",
    "description": "Tracks Google search navigation, page content, and user interactions",
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "notifications",
        "webNavigation",
        "https://www.google.com/*",
        "https://api.openai.com/*",
        "<all_urls>"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "web_accessible_resources": [
        "popup/*",
        "utils/*",
        "assets/robot-icon.png"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.google.com/search*"
            ],
            "js": [
                "content_scripts/google-search.js"
            ]
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_scripts/page-content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "browser_action": {
        "default_icon": {
            "48": "icons/icon-48.png"
        },
        "default_title": "Google Search Tracker",
        "default_popup": "popup/popup.html"
    }
}